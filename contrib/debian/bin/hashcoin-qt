#!/bin/sh

set -e

umask 077

basedir=~/.hashcoin
dbfile="$basedir/DB_CONFIG"
cfgfile="$basedir/HashCoin.conf"

[ -e "$basedir" ] || mkdir "$basedir"

# HashCoin does not clean up DB log files by default
[ -e "$dbfile" ] || echo 'set_flags DB_LOG_AUTOREMOVE' > "$dbfile"

exec /usr/lib/hashcoin/hashcoin-qt "$@"
